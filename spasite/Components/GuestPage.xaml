<Page x:Class="spasite.Components.GuestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:spasite.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GuestPage">

    <Grid>
        <StackPanel>
            <StackPanel>
                <DataGrid HorizontalAlignment="Center" x:Name="DisciplineDataGrid" AutoGenerateColumns="False" SelectionChanged="DisciplineDataGrid_SelectionChanged">
                    <DataGrid.Columns >
                        <DataGridTextColumn Header="Дисциплины" Width="100" Binding="{Binding Name }" >
                            
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
