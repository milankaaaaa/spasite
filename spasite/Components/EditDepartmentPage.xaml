<Page x:Class="spasite.Components.EditDepartmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:spasite.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditDepartmentPage">

    <Grid Background="#FFFFE5E9">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Foreground="#FFCE8A97" FontWeight="Bold" >ФАКУЛЬТЕТ</TextBlock>
            <ComboBox Name="FacultyCb" Width="200" Text="{Binding Departament.Faculty}"  />
            <TextBlock Foreground="#FFCE8A97" FontWeight="Bold">НАЗВАНИЕ</TextBlock>
            <TextBox Name="Nametb" Width="200"  />
            <Button Width="200" Content="СОХРАНИТЬ" BorderBrush="#FFCE8A97" Background="Pink" Margin="0 10 0 0" Foreground="White" Name="SaveChangesButton" Click="SaveChangesButton_Click" />
        </StackPanel>
    </Grid>
</Page>
